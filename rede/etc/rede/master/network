
config interface 'lan'
	option type 'bridge'
	option _orig_ifname 'eth0.1 lan'
	option _orig_bridge 'true'
	option ifname 'eth0.1 lan'
	option proto 'none'

config device 'lan_dev'
	option name 'eth0.1'

config interface 'wan'
	option ifname 'eth0.2'
	option proto 'dhcp'
	option type 'bridge'

config device 'wan_dev'
	option name 'eth0.2'

config interface 'wan6'
	option ifname 'eth0.2'
	option proto 'dhcpv6'
	option type 'bridge'

config switch
	option name 'switch0'
	option reset '1'
	option enable_vlan '1'

config switch_vlan
	option device 'switch0'
	option vlan '1'
	option vid '1'
	option ports '6t'

config switch_vlan
	option device 'switch0'
	option vlan '2'
	option vid '2'
	option ports '0 6t'

config switch_vlan
	option device 'switch0'
	option vlan '3'
	option vid '3'
	#option ports '0t 1t 2t 3t 4t 6t'
	option ports '1t 2t 3t 4t 6t'

config interface 'vlan_controle'
	option proto 'static'
	option ifname 'eth0.3'
	option ipaddr '192.168.7.1'
	option netmask '255.255.255.0'

config interface 'OPEN_ZONE'
	option type 'bridge'
	option proto 'static'
	option ipaddr '192.168.6.1'
	option netmask '255.255.255.0'
	option _orig_ifname 'eth0 wlan0-2'
	option _orig_bridge 'true'
	option ifname 'eth0.5'

config switch_vlan
	option device 'switch0'
	option vlan '4'
	option vid '4'
	option ports '1t 2t 3t 4t 6t'

config switch_vlan
	option device 'switch0'
	option vlan '5'
	option vid '5'
	option ports '1t 2t 3t 4t 6t'

config interface 'REDE_ZONE'
	option proto 'static'
	option netmask '255.255.255.0'
	option type 'bridge'
	option _orig_ifname 'eth0.4'
	option _orig_bridge 'true'
	option ifname 'eth0.4'
	option ipaddr '192.168.8.1'


